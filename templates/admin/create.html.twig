{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Création d'un article</h1>

    {{ form_start(formArticle) }}


    {{ form_row(formArticle.label, {'attr': {'placeholder': "Nom de l'article"}}) }}
    {{ form_row(formArticle.price, {'attr': {'placeholder': "Prix de l'article"}}) }}
    {{ form_row(formArticle.ref, {'attr': {'placeholder': "Référence de l'article"}}) }}

    <button type="submit" class="btn-primary btn"> 
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Créer l'article 
        {% endif %}
        </button>
        

    {{ form_end(formArticle) }}

{% endblock %}