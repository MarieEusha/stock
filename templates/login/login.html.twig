{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <h1>Connexion</h1>
    </br>

    <form action="{{path('login')}}" method="post">
        <div class="form-group">
            <input placeholder="Login" required name="_username" type="text" class="form-control">
            <br>
            <input placeholder="mdp" required name="_password" type="password" class="form-control">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>

{% endblock %}